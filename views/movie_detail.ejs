<!DOCTYPE html>
<html lang="en">
<head>
  
  <% include partials/head.ejs %>

</head>
<body>
  
  <% include partials/header.ejs %>

	<div id="hero-image-single" style="background-image: url('/images/<%= movie.hero_image %>')">
		<h1 id="hero-title"><%= movie.title %></h1>
	</div>

	<div class="content-padding clearfix">

		<div class="poster-wrapper">
			<img src="<%= baseImgURL %><%= movie.photoURL %>" class="img-responsive" width="300">
		</div>

		<div class="description-wrapper">

			<div class="main-characters">
				<h2 class="movie-header">Main Characters</h2>
				<ul>
					<% for (var i = 0; i < movie.actors.length; i++) { %>
					<li><%= movie.actors[i].name %></li>
					<% } %>
				</ul>
			</div>


		</div>

	</div>



	<% include partials/footer.ejs %>
	
  <% include partials/scripts.ejs %>
</body>
</html>